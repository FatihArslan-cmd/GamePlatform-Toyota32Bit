<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First block: Game Center title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/top_rounded_block"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_center_title"
            android:textSize="24sp"
            android:textColor="#4A00E0"
            android:gravity="center" />
    </LinearLayout>

    <!-- Second block: Explore Now button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bottom_rounded_block">

        <Button
            android:id="@+id/explore_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/explore_now"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/gradient_button" />
    </LinearLayout>
</LinearLayout>